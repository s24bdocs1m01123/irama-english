    <!-- Mission Section -->
    <section class="irama-mission py-16 md:py-24 bg-gradient-to-r from-green-800 via-emerald-800 to-teal-800 text-white relative overflow-hidden">
        <!-- Background Image -->
        <div class="absolute inset-0 opacity-20">
            <img src="https://images.unsplash.com/photo-1574943320219-553eb213f72d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80" alt="Mission" class="w-full h-full object-cover">
            <div class="absolute inset-0 bg-gradient-to-r from-green-800/80 to-teal-800/80"></div>
        </div>
        
        <div class="container mx-auto px-4 relative z-10">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <!-- Mission Image -->
