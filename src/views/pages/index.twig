{% extends "layouts.master" %}

{% block content %}
    <!-- Hero Banner Section -->
    <section class="irama-hero relative min-h-screen flex items-center justify-center overflow-hidden">
        <!-- Background Image -->
        <div class="absolute inset-0 z-0">
            <img src="https://images.unsplash.com/photo-1574943320219-553eb213f72d?q=80&w=2070&auto=format&fit=crop" 
                 alt="Hydroponic farming background" 
                 class="w-full h-full object-cover">
            <div class="absolute inset-0 bg-gradient-to-r from-green-900/90 to-green-700/70"></div>
            <div class="hero-bg-animation absolute inset-0"></div>
        </div>
        
        <!-- Hero Content -->
        <div class="relative z-10 text-center text-white px-4 max-w-6xl mx-auto">
            <!-- English Content -->
            <div class="en-content" data-lang="en">
                <h1 class="hero-slogan text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
                    It's not fresh only,<br>
                    <span class="text-green-300">it's alive…</span>
                </h1>
                <p class="hero-subheading text-xl md:text-2xl mb-8 max-w-4xl mx-auto leading-relaxed">
                    Welcome to iRAMA – Pioneering the Future of Soilless Farming.<br>
                    <span class="text-green-200">Sustainable. Smart. Scalable.</span>
                </p>
            </div>
            
            <!-- Arabic Content -->
            <div class="ar-content hidden" data-lang="ar" dir="rtl">
                <h1 class="hero-slogan text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
                    أكثر من طازجة…<br>
                    <span class="text-green-300">تنبض بالحیاة</span>
                </h1>
                <p class="hero-subheading text-xl md:text-2xl mb-8 max-w-4xl mx-auto leading-relaxed">
                    مرحباً بكم في iRAMA – رواد مستقبل الزراعة بدون تربة<br>
                    <span class="text-green-200">مستدامة. ذكية. قابلة للتوسع.</span>
                </p>
            </div>
            
            <!-- CTA Buttons -->
            <div class="hero-cta space-x-4 rtl:space-x-reverse">
                <button class="bg-green-500 hover:bg-green-600 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg">
                    <span data-en="Explore Solutions" data-ar="استكشف الحلول">Explore Solutions</span>
                </button>
                <button class="border-2 border-white text-white hover:bg-white hover:text-green-800 px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300 shadow-lg">
                    <span data-en="Watch Video" data-ar="شاهد الفيديو">Watch Video</span>
                </button>
            </div>
        </div>
        
        <!-- Scroll Indicator -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
            <div class="animate-bounce">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                </svg>
            </div>
        </div>
    </section>

    <!-- About iRAMA Section -->
    <section class="irama-about py-16 md:py-24 bg-gradient-to-br from-green-50 to-gray-50">
        <div class="container mx-auto px-4">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <!-- Visual Left -->
                <div class="order-2 lg:order-1">
                    <div class="about-visual relative">
                        <div class="main-image">
                            <img src="https://images.unsplash.com/photo-1416879595882-3373a0480b5b?q=80&w=2070&auto=format&fit=crop" 
                                 alt="Modern Hydroponic Greenhouse" 
                                 class="rounded-2xl shadow-2xl w-full h-80 object-cover">
                        </div>
                        <!-- Stats Card -->
                        <div class="absolute -bottom-6 -right-6 bg-white p-6 rounded-xl shadow-lg border border-green-100">
                            <div class="text-3xl font-bold text-green-600 mb-1">90%</div>
                            <div class="text-sm text-gray-600" data-en="Less Water" data-ar="أقل استهلاك للمياه">Less Water</div>
                        </div>
                        <!-- Floating Element -->
                        <div class="absolute -top-4 -left-4 bg-green-500 p-4 rounded-full shadow-lg">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                            </svg>
                        </div>
                    </div>
                </div>
                
                <!-- Content Right -->
                <div class="order-1 lg:order-2">
                    <div class="about-content">
                        <!-- English Content -->
                        <div class="en-content" data-lang="en">
                            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                                About <span class="text-green-600">iRAMA</span>
                            </h2>
                            <div class="mb-6">
                                <span class="inline-block bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-semibold mb-4">
                                    Integrated, Resilient, Agricultural Methods for Advancement
                                </span>
                            </div>
                            <p class="text-xl text-gray-700 mb-6 leading-relaxed">
                                iRAMA redefines agriculture through cutting-edge soilless farming technologies that maximize yield while minimizing environmental impact.
                            </p>
                            <p class="text-lg text-gray-600 mb-8">
                                <strong>Grow more with less:</strong> less water, less space, less waste. We're pioneering sustainable farming solutions that transform how we think about agriculture in the 21st century.
                            </p>
                        </div>
                        
                        <!-- Arabic Content -->
                        <div class="ar-content hidden" data-lang="ar" dir="rtl">
                            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                                عن <span class="text-green-600">iRAMA</span>
                            </h2>
                            <div class="mb-6">
                                <span class="inline-block bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-semibold mb-4">
                                    طرق زراعية متكاملة ومرنة للتطوير
                                </span>
                            </div>
                            <p class="text-xl text-gray-700 mb-6 leading-relaxed">
                                في iRAMA، نعيد تعريف الزراعة من خلال تقنيات الزراعة بدون تربة المتطورة التي تزيد الإنتاجية وتقلل التأثير البيئي.
                            </p>
                            <p class="text-lg text-gray-600 mb-8">
                                <strong>ازرع أكثر بأقل:</strong> مياه أقل، مساحة أقل، نفايات أقل. نحن نقود حلول الزراعة المستدامة التي تحول طريقة تفكيرنا في الزراعة في القرن الحادي والعشرين.
                            </p>
                        </div>
                        
                        <div class="stats-grid grid grid-cols-2 gap-6 mb-8">
                            <div class="stat-item text-center p-6 bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow duration-300">
                                <div class="text-3xl font-bold text-green-600 mb-2">25+</div>
                                <div class="text-sm text-gray-600" data-en="Years Experience" data-ar="سنة خبرة">Years Experience</div>
                            </div>
                            <div class="stat-item text-center p-6 bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow duration-300">
                                <div class="text-3xl font-bold text-green-600 mb-2">1000+</div>
                                <div class="text-sm text-gray-600" data-en="Farms Deployed" data-ar="مزرعة منشأة">Farms Deployed</div>
                            </div>
                        </div>
                        
                        <!-- CTA Button -->
                        <div>
                            <button class="bg-green-600 hover:bg-green-700 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg">
                                <span data-en="Learn More About Us" data-ar="اعرف المزيد عنا">Learn More About Us</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why iRAMA / Benefits Section -->
    <section class="irama-benefits py-16 md:py-24 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                    <span data-en="Why Choose iRAMA?" data-ar="لماذا تختار iRAMA؟">Why Choose iRAMA?</span>
                </h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    <span data-en="Discover the revolutionary benefits of our soilless farming solutions" data-ar="اكتشف الفوائد الثورية لحلول الزراعة بدون تربة">Discover the revolutionary benefits of our soilless farming solutions</span>
                </p>
            </div>
            
            <div class="benefits-grid grid md:grid-cols-3 lg:grid-cols-5 gap-8">
